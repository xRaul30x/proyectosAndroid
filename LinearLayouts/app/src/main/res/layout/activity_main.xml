<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:text="Cesta de la compra"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:background="#000000">

                <TableRow
                    android:id="@+id/fila_prod1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prod1Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Producto 1"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/unidades1"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/unidadesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="unidades"
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow
                    android:id="@+id/fila_prod2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prod2Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Producto 1"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/unidades2"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/unidadesText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:shadowColor="#FFFFFF"
                        android:text="unidades"
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow
                    android:id="@+id/fila_prod3"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1"
                    android:background="#000000">

                    <TextView
                        android:id="@+id/prod3Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Producto 1"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/unidades3"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="#FFFFFF"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/unidadesText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="unidades"
                        android:textColor="#FFFFFF" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/enviarCopia"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#757272"
                android:text="ENVIAR COPIA"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:background="#4E588E"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Importe"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000.0€"
                        android:textColor="#FFFFFF" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Importe"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000.0€"
                        android:textColor="#FFFFFF" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000.0€"
                        android:textColor="#FFFFFF" />

                </TableRow>
            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/volver"
                android:layout_width="187dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#757272"
                android:text="VOLVER"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/confirmar"
                android:layout_width="187dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#757272"
                android:text="CONFIRMAR"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>